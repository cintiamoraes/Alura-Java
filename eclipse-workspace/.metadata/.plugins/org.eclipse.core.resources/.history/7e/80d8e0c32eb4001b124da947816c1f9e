package capituloI;

import java.util.Scanner;

public class IntroduccionCaracteresTeclado {

	public static void main(String[] args) {
		
		Scanner scanner = new Scanner (System.in);
		System.out.println("Cómo te llamas?");
		
		//escanea lo que introduzca el usuário
		//espera que el usuário introduzca una cadena de caracteres
		//al pulsar la tecla Enter, escaneará la línea introducida y le asignará a la variable nombre que es tipo String
		String nombre = scanner.nextLine();//String es una cadena de caracteres que es un objeto
		
		System.out.println("Hola, " + nombre +". Qué tal? Bienvenido!");
	}
	
}
