package capituloII;

public class Variables {
	
	public static void main(String[] args) {
		
		int variable1;
		int variable2, variable3; //si pueden declarar de forma conjunta porque son variables del mismo tipo
		int variable4 = 23;//podemos asignar un valor a una variable anteriormente declarada
		
		variable1=6;//No ponemos su tipo porque ya declaramos anteriormente. Las variables no pueden caminar al largo del proyecto
		
		System.out.println("Variable1 contiene el valor: "+ variable1);
		
		variable2 = 2* variable1;
		
		System.out.println("Variable2 contiene el valor: "+ variable2);
		
		
	}

}
